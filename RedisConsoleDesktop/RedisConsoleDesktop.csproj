<Project Sdk="Microsoft.NET.Sdk.Web" ToolsVersion="15.0">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AssemblyName>RedisConsoleDesktop</AssemblyName>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="ElectronNET.API" Version="9.31.2" />
    <PackageReference Include="log4net" Version="2.0.12" />
    <PackageReference Include="Telerik.UI.for.AspNet.Core" Version="2020.3.1021" />
  </ItemGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DefineConstants>$(DefineConstants);RELEASE</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Templates\**" />
    <Content Remove="Templates\**" />
    <EmbeddedResource Remove="Templates\**" />
    <None Remove="Templates\**" />
  </ItemGroup>
  <ItemGroup>
    <Content Remove="wwwroot\imgs\android-chrome-192x192.png" />
    <Content Remove="wwwroot\imgs\android-chrome-512x512.png" />
    <Content Remove="wwwroot\imgs\apple-touch-icon.png" />
    <Content Remove="wwwroot\imgs\favicon-16x16.png" />
    <Content Remove="wwwroot\imgs\favicon-32x32.png" />
    <Content Remove="wwwroot\imgs\favicon.ico" />
  </ItemGroup>
  <ItemGroup>
    <None Include="wwwroot\imgs\android-chrome-192x192.png" />
    <None Include="wwwroot\imgs\android-chrome-512x512.png" />
    <None Include="wwwroot\imgs\apple-touch-icon.png" />
    <None Include="wwwroot\imgs\favicon-16x16.png" />
    <None Include="wwwroot\imgs\favicon-32x32.png" />
    <None Include="wwwroot\imgs\favicon.ico" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Redis.Core\Redis.Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Content Update="electron.manifest.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Views\Home\" />
  </ItemGroup>
</Project>